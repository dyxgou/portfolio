---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  size: number;
  loading?: "lazy" | "eager";
  class?: string;
}

const { src, alt, size, loading = "lazy", class: classList } = Astro.props;
---

<Image
  class:list={[
    "object-cover border-white border-2 rounded-2xl shadow-xs shadow-gray-900/60",
    [classList],
  ]}
  loading={loading}
  src={src}
  alt={alt}
  width={size}
  height={size}
/>
