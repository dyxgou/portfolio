  code={`func (l *Lexer) NextToken() token.Token {

  // First Operation
  if l.ch == byte(token.EOF) {
    return token.New(token.EOF, "")
  }

  // Second Operation
  l.skipWhitespaces()

  // Third Operation
  if l.ch == '\\r' && l.peekChar() == '\\n' {
    l.next()
    return token.New(token.CRLF, "\\r\\n")
  }

