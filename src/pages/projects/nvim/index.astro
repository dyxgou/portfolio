---
import Section from "@/layouts/Section.astro";
import Layout from "@/layouts/Layout.astro";
import BackLink from "@/components/Articles/BackLink.astro";
import Header from "@/components/Articles/Header.astro";
import Picture from "@/components/Picture.astro";
import Content from "./_components/Content.astro";
---

<Layout title="Redis Clone">
  <Section class="w-full flex sm:justify-center px-5 py-25">
    <BackLink />
    <div class="md:w-3/4 lg:w-2/3 flex flex-col items-center">
      <Header
        year="2022"
        readingTime="1 minute"
        codeLink="https://github.com/dyxgou/nvim"
      >
        Neovim Isn’t Hard — It’s Powerful
      </Header>

      <Picture
        class="appear w-full md:w-3/4 aspect-square sm:aspect-video border-4"
        loading="eager"
        src="/images/nvim.webp"
        alt="redis"
        size={514}
      />

      <Content />
    </div>
  </Section>
</Layout>
